{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":disableDependencyDashboard"
  ],
  "automergeType": "branch",
  "labels": [
    "renovate"
  ],
  "separateMinorPatch": true,
  "rebaseWhen": "behind-base-branch",
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^charts/.+/Chart.yaml$"
      ],
      "matchStrings": [
        "#\\s*renovate:\\sdatasource=(?<datasource>.*?)\\sdepName=(?<depName>.*?)(?: registryUrl=(?<registryUrl>.*?))?(?: versioning=(?<versioning>.*?))?\\n(?:app)?[Vv]ersion: \"?(?<currentValue>.*?)\"?\\n"
      ]
    },
    {
      "customType": "regex",
      "fileMatch": [
        "Dockerfile$"
      ],
      "matchStrings": [
        "#\\srenovate:\\sdatasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\s(ENV|ARG) .*?_VERSION=\"?(?<currentValue>.*?)\"?\\n"
      ]
    }
  ],
  "automerge": true,
  "packageRules": [
    {
      "matchPackageNames": [
        "gchq/CyberChef"
      ],
      "ignoreTests": true
    },
    {
      "matchPackageNames": [
        "node"
      ],
      "allowedVersions": "<=17"
    }
  ]
}
